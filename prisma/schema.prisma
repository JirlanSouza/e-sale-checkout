generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id                String      @id
  code              String      @unique
  cpf               String
  coupon_code       String
  coupon_percentage Int
  issue_date        DateTime
  freight           Decimal
  sequence          Int
  total             Decimal
  OrderItem         OrderItem[]

  @@index([code, cpf])
}

model OrderItem {
  id       String  @id
  id_order String
  price    Decimal
  quantity Int
  order    Order   @relation(fields: [id_order], references: [id])

  @@index([id_order])
}
